{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "database",
      "image": "%AWS_ACCOUNT_ID%.dkr.ecr.%AWS_DEFAULT_REGION%.amazonaws.com/dev-database",
      "hostname": "database",
      "essential": true,
      "memory": 512,
      "portMappings": [
        {
          "hostPort": 5432,
          "containerPort": 5400
        }
      ]
    },
    {
      "name": "redis",
      "image": "%AWS_ACCOUNT_ID%.dkr.ecr.%AWS_DEFAULT_REGION%.amazonaws.com/dev-redis",
      "hostname": "redis",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
        }
      ],
      "memory": 256
    },
    {
      "name": "dev-app",
      "image": "%AWS_ACCOUNT_ID%.dkr.ecr.%AWS_DEFAULT_REGION%.amazonaws.com/dev-app",
      "hostname": "dev-app",
      "essential": false,
      "memory": 1024,
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8000
        }
      ],
      "links": [
        "database"
      ]
    },
    {
      "name": "nginx",
      "image": "%AWS_ACCOUNT_ID%.dkr.ecr.%AWS_DEFAULT_REGION%.amazonaws.com/dev-nginx",
      "hostname": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "dev-app"
      ],
      "memory": 512
    },
    {
      "name": "worker",
      "image": "%AWS_ACCOUNT_ID%.dkr.ecr.%AWS_DEFAULT_REGION%.amazonaws.com/dev-worker",
      "hostname": "worker",
      "essential": false,
      "memory": 1024,
      "links": [
        "dev-app",
        "database"
      ]
    }
  ]
}